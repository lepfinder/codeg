        {
          "name": "runscript",
          "type": "single",
          "folder": "",
          "filename": "run.bat",
          "templatePath": "build/run.ftl"
        },
        {
          "name": "runscript",
          "type": "single",
          "folder": "",
          "filename": "run.sh",
